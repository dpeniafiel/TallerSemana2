<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerSemana2.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sistema de registro de notas" HorizontalOptions="CenterAndExpand"/>
            <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2020/05/logo-UISRAEL.png"
                   />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese contrasenia" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar" Clicked="btnIniciar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>